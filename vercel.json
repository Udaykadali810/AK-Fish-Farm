{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "api.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/api.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api.js"
    },
    {
      "src": "/api/orders/(.*)",
      "dest": "/api.js"
    },
    {
      "src": "/api/offers",
      "dest": "/api.js"
    },
    {
      "src": "/api/inquiries",
      "dest": "/api.js"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "/api.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}