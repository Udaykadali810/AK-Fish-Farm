{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "store/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/index.js"
        },
        {
            "src": "/store/(.*)",
            "dest": "store/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1",
            "check": true
        },
        {
            "src": "/(.*)",
            "status": 404,
            "dest": "frontend/index.html"
        }
    ]
}